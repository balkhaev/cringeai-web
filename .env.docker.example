# Trender Docker Environment Variables
# Copy to .env and fill in required values

# ============================================
# Required API Keys
# ============================================

# Gemini AI (video analysis)
GEMINI_API_KEY=

# OpenAI (optional, for ChatGPT analysis)
OPENAI_API_KEY=

# Kling AI (video generation)
# Get keys from: https://app.klingai.com/global/dev/api-key
KLING_ACCESS_KEY=
KLING_SECRET_KEY=
KLING_API_URL=https://api-singapore.klingai.com

# ============================================
# Instagram (optional)
# ============================================

INSTAGRAM_USER=
INSTAGRAM_PASS=

# ============================================
# URLs (defaults work for local development)
# ============================================

# Public URL for external API access (Kling needs to download videos)
PUBLIC_URL=http://localhost:3001

# CORS origin for web app
CORS_ORIGIN=http://localhost:3000

# Auth settings
BETTER_AUTH_SECRET=dev-secret-change-in-production
BETTER_AUTH_URL=http://localhost:3001

# Frontend URLs
NEXT_PUBLIC_SERVER_URL=http://localhost:3001
NEXT_PUBLIC_API_URL=http://localhost:3001/api
